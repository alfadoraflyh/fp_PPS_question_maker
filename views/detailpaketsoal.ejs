<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
        <link rel="stylesheet" href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="https://code.iconify.design/iconify-icon/1.0.3/iconify-icon.min.js"></script>
    
        <title>Bank Soal</title>
    </head>

    <nav class="navbar navbar-expand-sm bg-white navbar-light justify-content-end">
        <button class="col-lg-2" style="padding-left: 100px;" onclick="location.href='/paketsoal'">
            <svg width="17" viewBox="0 0 47 80" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M46.68 7.08L39.6 0L0 39.6L39.6 79.2L46.68 72.12L14.16 39.6L46.68 7.08Z" fill="black"/>
            </svg>   
        </button>
        <div class="col-lg-8"></div>
        <div class="col-lg-2">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#">Dosen Pengampu</a>
          </li>
          <li class="nav-item">
            <iconify-icon icon="gridicons:user-circle" style="color:#666;" width="35" height="35"></iconify-icon>
          </li>  
        </ul>
        </div>
    </nav>

    <body style="background-color:  #1f2122;">
        <div class="container" style="margin-top: 30px;">
            <div class="row pt-3 text-xs font-bold">
            </div>
            <div class="row mb-3">
                <div class="col-lg-8">
                    <h2 style="color: white;">Detail Paket Soal</h2>           
                </div>
            </div>
            <div class="row">
                <div class="col-sm-7">
                    <div class="mb-3 pl-4 py-2" style="background-color: white; border-color: #c3cfd9; border-width: 3px;">
                        <span class="font-bold text-xl px-4"><%= paketsoal.nama_paket_soal %></span>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="mb-3 pl-4 py-2" style="background-color: white; border-color: #c3cfd9; border-width: 3px;">
                        <span class="font-bold text-lg px-4">Kode Paket Soal : </span><span class="text-lg ml-4"></span>
                    </div>
                </div>
            </div>
            <div class="row px-2">
                <div class="col-lg-12">

                    <% soalujian.forEach(function(s){ %>

                    <div class="mb-2 py-3" style="background-color: white; border-color: #c3cfd9; border-width: 3px;">
                        <div class="row px-12">
                            <div class="col-lg-12 mb-2">
                                <span class="font-bold text-base"><%= s.pertanyaan %></span>
                            </div>
                            <div class="col-lg-12">
                                <span class="font-bold text-base">Pilihan A : </span><span class="text-base ml-4"><%= s.pilihan_a %></span>
                            </div>
                            <div class="col-lg-12">
                                <span class="font-bold text-base">Pilihan B : </span><span class="text-base ml-4"><%= s.pilihan_b %></span>
                            </div>
                            <div class="col-lg-12">
                                <span class="font-bold text-base">Pilihan C : </span><span class="text-base ml-4"><%= s.pilihan_c %></span>
                            </div>
                            <div class="col-lg-12">
                                <span class="font-bold text-base">Pilihan D : </span><span class="text-base ml-4"><%= s.pilihan_d %></span>
                            </div>
                        </div>
                    </div>

                    <% }); %>

                </div>
            </div>
        </div>
    </body>
</html>